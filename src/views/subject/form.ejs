<div class="panel">
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <form method="POST" action="/subject/submit" class="validate-form">
                    <div class="row">
                        <div class="col-lg-6 col-lg-offset-3">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Name</label>
                                <input type="text" name="name" class="form-control validate-input" id="name"
                                    aria-describedby="emailHelp" placeholder="Enter name">
                                <span class="text-danger">
                                    <%= formError != '' && typeof formError[0].name != 'undefined'  ? formError[0].name : '' %>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-lg-offset-3">
                            <div class="form-group">
                                <label for="exampleInputAddress1">Description</label>
                                <input type="text" name="description" class="form-control validate-input"
                                    id="Description" aria-describedby="descriptionHelp"
                                    placeholder="Enter address">
                                <span class="text-danger">
                    
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>