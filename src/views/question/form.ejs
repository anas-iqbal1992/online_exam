<div class="panel">
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <form method="POST" action="/question/submit" class="validate-form">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="exampleInputBoard">Subject</label>
                                <select name="subject" class="form-control validate-input" id="subject">
                                    <option value="">Select subjects</option>
                                    <% for(var prop in subjects) {
                                        if(subjects.hasOwnProperty(prop)){ %>
                                             <option value="<%-  prop %>"><%- subjects[prop] %></option>
                                        <%}
                                    } %>
                                </select>
                                <span class="text-danger">
                                    <%= formError != '' && typeof formError[0].subject != 'undefined'  ? formError[0].subject : '' %>
                                </span>
                            </div>
                            <div class="form-group">
                                <label>Question</label>
                                <input type="text" name="question" class="form-control validate-input" id="question"
                                    placeholder="Enter question">
                                <span class="text-danger">
                                    <%= formError != '' && typeof formError[0].question != 'undefined'  ? formError[0].question : '' %>
                                </span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputAddress1">Description</label>
                                <input type="text" name="description" class="form-control" id="Description"
                                    aria-describedby="descriptionHelp" placeholder="Enter address">
                                <span class="text-danger">
                                </span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                        <div class="col-lg-6" id="apd-ans">
                            <div class="row">
                                <div class="col-lg-10">
                                    <div class="form-group">
                                        <label>Anwser 1</label>
                                        <input type="text" name="answer[]" class="form-control validate-input"
                                            id="answer-1" placeholder="Enter answer">
                                        <span class="text-danger">
                                            <%= formError != '' && typeof formError[0].answer != 'undefined'  ? formError[0].answer : '' %>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-lg-1">
                                    <label></label>
                                    <a class="btn btn-info" data-no="1" href="javascript:void(0)" id="add-more">+</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>